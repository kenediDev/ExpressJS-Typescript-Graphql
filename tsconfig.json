{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es5", "es6", "dom", "esnext.asynciterable", "es2018"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": [
    "server/**/*.ts",
    "src/**/*.ts",
    "server/**/*.json",
    "wconf/**.js"
  ],
  "exclude": ["node_modules"]
}
